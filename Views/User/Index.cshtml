
@model loginReg.Models.Register
<h1>Registration</h1>
<form asp-action="register" method="post" asp-controller="User">
    <div class = "form-group">
        <span asp-validation-for= "FirstName"></span>
        <label asp-for="FirstName" ></label>
        <input type = "text" asp-for="FirstName">
    </div>
    <div class="form-group">
        <span asp-validation-for="lastName"></span>
        <label asp-for="lastName" ></label>
        <input type="text" asp-for="lastName">
    </div>
    <div class="form-group">
        <span asp-validation-for="email"></span>
        <label asp-for="email" ></label>
        <input asp-for="email">
    </div>
    <div class="form-group">
        <span asp-validation-for="password"></span>
        <label asp-for="password" ></label>
        <input type ="password" asp-for="password">
    </div>
    <div class="form-group">
        <span asp-validation-for="confirm"></span>
        <label asp-for="confirm" ></label>
        <input asp-for="confirm">
    </div>
        <input type="submit" value="Register Me!">
</form>

<h1>Login</h1>
<form action="logIn" method = "POST">
    <div class="form-group">    
        <span asp-validation-for="email"></span>
        <label name = "email" >Email: </label>
        <input name = "email">
    </div>
    <div class="form-group">
        <span asp-validation-for="password"></span>
        <label name = "password" >Password: </label>
        <input type = "text" name = "password">
    </div> 
        <input type="submit" value="Log me in!">
    </form>